<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.repository.AlertMapper">
    <select id="countReadYn" resultType="int" parameterType="int">
        SELECT count(*)
          FROM alert
         WHERE RECEIVE_IDX = #{userIdx}
           AND READ_YN = 'N'
    </select>
</mapper>